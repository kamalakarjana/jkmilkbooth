<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Collections - {{ date }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table-responsive { overflow-x: auto; }
        .badge-session { font-size: 0.8em; }
        .summary-card { background: #f8f9fa; border-radius: 8px; padding: 15px; margin-bottom: 20px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Milk Booth</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/add_collection_page">Add Collection</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/daily">Daily Collections</a></li>
                    <li class="nav-item"><a class="nav-link" href="/daily_sales">Daily Sales</a></li>
                    <li class="nav-item"><a class="nav-link" href="/suppliers">Suppliers</a></li>
                    <li class="nav-item"><a class="nav-link" href="/customers">Customers</a></li>
                    <li class="nav-item"><a class="nav-link" href="/sales">Sales</a></li>
                    <li class="nav-item"><a class="nav-link" href="/monthly">Monthly Report</a></li>
                    <li class="nav-item"><a class="nav-link" href="/withdrawals">Withdrawals</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/my_account">My Account</a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2 class="mb-4">Daily Collections - {{ date }}</h2>
        
        <!-- Filter Form -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label for="date" class="form-label">Date</label>
                        <input type="date" class="form-control" id="date" name="date" value="{{ date }}" required>
                    </div>
                    <div class="col-md-3">
                        <label for="session" class="form-label">Session</label>
                        <select class="form-select" id="session" name="session">
                            <option value="all" {% if session_filter == 'all' %}selected{% endif %}>All Sessions</option>
                            <option value="morning" {% if session_filter == 'morning' %}selected{% endif %}>Morning</option>
                            <option value="evening" {% if session_filter == 'evening' %}selected{% endif %}>Evening</option>
                        </select>
                    </div>
                    <div class="col-md-3 align-self-end">
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <a href="/daily" class="btn btn-secondary">Today</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total Liters</h5>
                        <h2 class="card-text">{{ "%.2f"|format(total_liters) }} L</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Total Amount</h5>
                        <h2 class="card-text">₹{{ total_amount }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Avg Fat %</h5>
                        <h2 class="card-text">{{ "%.1f"|format(avg_fat) }}%</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Collections</h5>
                        <h2 class="card-text">{{ rows|length }}</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Collections Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Collections List</h5>
                {% if rows %}
                <span class="badge bg-primary">{{ rows|length }} records</span>
                {% endif %}
            </div>
            <div class="card-body">
                {% if rows %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Supplier ID</th>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Session</th>
                                <th>Liters</th>
                                <th>Fat %</th>
                                <th>Milk Type</th>
                                <th>Rate/L</th>
                                <th>Amount</th>
                                <th>Note</th>
                                {% if current_user.role == 'admin' %}
                                <th>Actions</th>
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in rows %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>
                                    <a href="{{ url_for('supplier_view', supplier_id=row.supplier.supplier_id) }}">
                                        {{ row.supplier.supplier_id }}
                                    </a>
                                </td>
                                <td>{{ row.supplier.name }}</td>
                                <td>{{ row.date }}</td>
                                <td>
                                    <span class="badge {% if row.session == 'morning' %}bg-warning text-dark{% else %}bg-info{% endif %}">
                                        {{ row.session|title }}
                                    </span>
                                </td>
                                <td>{{ "%.2f"|format(row.liters) }}</td>
                                <td>{{ "%.1f"|format(row.fat) }}%</td>
                                <td>{{ row.milk_type|title }}</td>
                                <td>₹{{ "%.2f"|format(row.rate_per_liter) }}</td>
                                <td><strong>₹{{ row.amount }}</strong></td>
                                <td>{{ row.note or '-' }}</td>
                                {% if current_user.role == 'admin' %}
                                <td>
                                    <a href="{{ url_for('edit_collection', cid=row.id) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                </td>
                                {% endif %}
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr class="table-dark">
                                <td colspan="5" class="text-end"><strong>Totals:</strong></td>
                                <td><strong>{{ "%.2f"|format(total_liters) }} L</strong></td>
                                <td>{{ "%.1f"|format(avg_fat) }}%</td>
                                <td></td>
                                <td></td>
                                <td><strong>₹{{ total_amount }}</strong></td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <h4 class="text-muted">No collections found for {{ date }}</h4>
                    <p class="text-muted">Try selecting a different date or check if collections were added.</p>
                    <a href="/add_collection_page" class="btn btn-primary">Add Collection</a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-refresh every 5 minutes if on today's date
        const today = new Date().toISOString().split('T')[0];
        if (document.getElementById('date').value === today) {
            setTimeout(() => {
                window.location.reload();
            }, 300000); // 5 minutes
        }
    </script>
</body>
</html>
